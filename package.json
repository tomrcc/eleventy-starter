{
  "name": "eleventy-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "fetch-theme-color": "node utils/fetch-theme-color.js",
    "build:sass": "sass src/sass:_site/css",
    "dev:sass": "sass src/sass:_site/css --watch",
    "build:bookshop-sass": "bookshop-sass -b component-library -o _site/css/bookshop.css",
    "dev:bookshop-sass": "bookshop-sass -b component-library -o _site/css/bookshop.css --watch",
    "build:11ty": "eleventy",
    "dev:11ty": "eleventy --serve",
    "dev:tailwind" : "tailwindcss -i ./src/assets/styles/tailwind.css -o ./_site/css/tailwind.css -w",
    "build": "npm-run-all build:*",
    "new": "npx @bookshop/init --component",
    "start": "npm-run-all -p dev:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@bookshop/browser": "3.8.1",
    "@bookshop/eleventy-engine": "3.8.1",
    "@bookshop/generate": "3.8.1",
    "@bookshop/sass": "^3.8.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@bookshop/eleventy-bookshop": "3.8.1",
    "sass": "^1.69.2"
  }
}
